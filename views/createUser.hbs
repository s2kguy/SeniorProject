<section id="createAccount" class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-xs-2 col-sm-2 col-md-3 col-lg-3 col-xl-3">
                <img src="" alt="" class="img-fluid mb-3 rounded-circle">
            </div>

            <div class="col-xs-2 col-sm-8 col-md-6 col-lg-6 col-xl-6">
                {{#if hasErrors}}
                <div class="alert alert-danger">
                    {{# each messages}}
                    <p>{{this}}</p>
                    {{/each}}
                </div>
                {{/if}}

                <div class="card text-white bg-dark mb-5">
                    <div class="card-body">
                        <h4 class="card-title text-center">Welcome, New Memeber!</h4>
                        <form class="px-2 py-2" action="/CreateAccount" method="post" id="spiritsContainer">
                            <div class="form-group">
                                <label for="fName">First Name</label>
                                <input type="text" class="form-control" id="fName" name="fName" placeholder="First Name">
                            </div>
                            <div class="form-group">
                                <label for="fName">Last Name</label>
                                <input type="text" class="form-control" id="lName" name="lName" placeholder="Last Name">
                            </div>
                            <div class="form-group">
                                <label for="exampleDropdownFormEmail1">Email Address</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="email@example.com">
                            </div>
                            <div class="form-group">
                                <label for="exampleDropdownFormPassword1">Password</label>
                                <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                            </div>
                            <div class="form-group">
                                <label for="bDay">Birthday</label>
                                <input type="text" name="bday" placeholder="01/23/1986">
                            </div>
                            <div class="form-group">
                                <label for="phonenumber">Phone Number</label>
                                <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" placeholder="(843)123-4567">
                            </div>

                            <input type="hidden" name="_csrf" value="{{csrfToken}}">
                            <button type="submit" class="btn btn-primary">Create Account</button>

                        </form>
                    </div>
                </div>
            </div>

            <div class="col-xs-2 col-sm-2 col-md-3 col-lg-3 col-xl-3">
                <img src="" alt="" class="img-fluid mb-3 rounded-circle">
            </div>
        </div>
    </div>
</section>