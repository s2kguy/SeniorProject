<section id="signIn" class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-xs-2 col-sm-2 col-md-3 col-lg-3 col-xl-3">
                <img src="" alt="" class="img-fluid mb-3 rounded-circle">
            </div>

            <div class="col-xs-2 col-sm-8 col-md-6 col-lg-6 col-xl-6">
                {{#if hasErrors}}
                <div class="alert alert-danger">
                    {{# each messages}}
                    <p>{{this}}</p>
                    {{/each}}
                </div>
                {{/if}}

                <div class="card text-white bg-dark mb-3" style="max-width: 25rem;">
                    <div class="card-body">
                        <h4 class="card-title text-center">Sign In!</h4>
                        <form class="px-4 py-3" action="/Member/Sign-In" method="post" id="spiritsContainer">
                            <div class="form-group">
                                <label for="exampleDropdownFormEmail1">Email Address</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="email@example.com">
                            </div>
                            <div class="form-group">
                                <label for="exampleDropdownFormPassword1">Password</label>
                                <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                            </div>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="checkbox" class="form-check-input">Remember Me</label>
                            </div>
                            <input type="hidden" name="_csrf" value="{{csrfToken}}">
                            <button type="submit" class="btn btn-primary">Sign In</button>
                            <a href="/CreateAccount" class="btn btn-secondary">Create Account</a>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-xs-2 col-sm-2 col-md-3 col-lg-3 col-xl-3">
                <img src="" alt="" class="img-fluid mb-3 rounded-circle">
            </div>
        </div>
    </div>
</section>

