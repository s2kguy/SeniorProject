<section id="createAccount" class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-xs-2 col-sm-2 col-md-3 col-lg-3 col-xl-3">
                <img src="" alt="" class="img-fluid mb-3 rounded-circle">
            </div>

            <div class="col-xs-2 col-sm-8 col-md-6 col-lg-6 col-xl-6">
                {{#if hasErrors}}
                <div class="alert alert-danger">
                    {{# each messages}}
                    <p>{{this}}</p>
                    {{/each}}
                </div>
                {{/if}}

                <div class="card text-white bg-dark mb-5">
                    <div class="card-body">
                        <h4 class="card-title text-center">Password Reset</h4>
                        <form class="px-2 py-2" action="/reset/{{resetPasswordToken}}" method="post" id="spiritsContainer">
                           
                            <div class="form-group">
                                <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password">
                            </div>
                           
                            <input type="hidden" name="_csrf" value="{{csrfToken}}">
                            <button type="submit" class="btn btn-primary">Update Password</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>