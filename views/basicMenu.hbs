


<script type="text/javascript">
    
    function StandAloneSelected(prodID) {

        console.log(prodID);
        var sandO = document.getElementById('sandO'+prodID);
        var specialInst = document.getElementById('specialInst'+prodID);
        var sideItem = document.getElementById('side-options'+prodID);
        var priceDiv = document.getElementById('priceDiv'+prodID);
     //   var chxCookOption = document.getElementById('chxCookOp'+prodID);

        sideItem.style.display = 'none';
        specialInst.style.display = 'none';
        priceDiv.style.display = 'none';
     //   chxCookOption.style.display = 'none';
        priceDiv.innerHTML = 'Sandwich Only Price'

      //  chxCookOption.style.display = sandO.checked ? 'block' : 'none';
        specialInst.style.display = sandO.checked ? 'block' : 'none';
