<div class="container updateContainer">
    <div class="row">
    <div class="col-2"></div>
    <div class="col-4">
        <div class="card text-white bg-dark">
            <div class="card-body">
                <p>To update your profile, simpley replace the text in the areas you wish to change, and then press the Update
                    Account button.
                </p>
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="card text-white bg-dark">
            <div class="card-body">
                <form class="px-2 py-2" action="/Member/Profile/Edit/{{user.id}}" method="post" id="spiritsContainer">
                    <div class="form-group">
                        <!--label for="fName">First Name</label-->
                        <input type="text" class="form-control" id="fName" name="fName" value="{{user.f_Name}}">
                    </div>
                    <div class="form-group">
                        <!--label for="fName">Last Name</label-->
                        <input type="text" class="form-control" id="lName" name="lName" value="{{user.l_Name}}">
                    </div>
                    <div class="form-group">
                        <!--label for="exampleDropdownFormEmail1">Email Address</label-->
                        <input type="email" class="form-control" id="email" name="email" value="{{user.email}}">
                    </div>
                    <div class="form-group">
                        <!--label for="bDay">Birthday</label-->
                        <input type="text" name="bday" id="bday" value="{{user.birthday}}">
                    </div>
                    <div class="form-group">
                        <!--label for="phonenumber">Phone Number</label-->
                        <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" value="{{user.phoneNum}}">
                    </div>

                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    <button type="submit" class="btn btn-primary">Edit Account</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-2"></div>
    </div>
</div>